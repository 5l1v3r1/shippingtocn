<!-- views/profile.ejs -->
<!doctype html>
<html>
<head>
	<title>Shipping.CA</title>
	<%- include('header.ejs') %>
</head>
<body>
	<%- include('top-navbar.ejs', {user: user}); %>

	<div class="container">

		<div class="page-header text-center">
			<h1><span class="fa fa-user"></span> <%= user.username %> (Edit Profile Page)</h1>
		</div>
		<hr>
		<div class="row">
			<!-- LOGIN FORM -->
			<form action="/profile/edit/<%= user.id %>" method="post">
				<div class="row form-group">
					<div class="col-lg-6">
						<label>First Name</label>
						<input type="text" class="form-control form-control" name="firstname" value="<%= user.firstname %>">
					</div>
					<div class="col-lg-6">
						<label>Last Name</label>
						<input type="text" class="form-control form-control" name="lastname" value="<%= user.lastname %>">
					</div>
				</div>
				<div class="form-group">
					<label>Email</label>
					<input type="email" class="form-control form-control" name="email" value="<%= user.email %>">
				</div>
				<div class="form-group">
					<label>Phone</label>
					<input type="text" class="form-control form-control" name="phone" value="<%= user.phone %>">
				</div>
				<div class="row form-group">
					<div class="col-lg-4">
						<label>City</label>
						<input type="text" class="form-control form-control" name="city" value="<%= user.city %>">
					</div>
					<div class="col-lg-2">
						<label>Prov</label>
						<input type="text" class="form-control form-control" name="prov" value="<%= user.prov %>">
					</div>
					<div class="col-lg-3">
						<label>Country</label>
						<input type="text" class="form-control form-control" name="country" value="<%= user.country %>">
					</div>
					<div class="col-lg-3">
						<label>Postal Code</label>
						<input type="text" class="form-control form-control" name="postal_code" value="<%= user.postal_code %>">
					</div>
				</div>

				<button type="submit" class="btn btn-info">Update</button>
			</form>

		</div>

	</div>

<%- include('main-js.ejs') %>
</body>
</html>
